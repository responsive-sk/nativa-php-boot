{# Article Detail #}
{% extends "layouts/base.twig" %}

{% block content %}
<article class="max-w-3xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-8">
        <header class="mb-6">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">{{ article.title() }}</h1>
            <div class="text-sm text-gray-500">
                <span>Published on {{ article.publishedAt()|date("F d, Y") }}</span>
            </div>
        </header>

        {% if article.image() %}
            <img src="{{ article.image() }}" alt="{{ article.title() }}" class="w-full h-64 object-cover rounded-lg mb-6">
        {% endif %}

        <div class="prose max-w-none">
            {{ article.content()|nl2br }}
        </div>

        {% if article.tags() is not empty %}
            <div class="mt-6 pt-6 border-t">
                <span class="text-gray-500 text-sm">Tags:</span>
                <div class="flex gap-2 mt-2">
                    {% for tag in article.tags() %}
                        <a href="/tag/{{ tag|lower|replace({' ': '-'}) }}" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200">
                            {{ tag }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</article>

<div class="max-w-3xl mx-auto mt-8">
    <a href="/articles" class="text-blue-600 hover:underline">‚Üê Back to Articles</a>
</div>
{% endblock %}
