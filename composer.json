{
    "name": "responsive-sk/php-cms",
    "description": "Modern PHP CMS and Blog Platform with DDD architecture",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "symfony/console": "^8.0",
        "symfony/http-foundation": "^8.0",
        "vlucas/phpdotenv": "^5.6",
      "ext-fileinfo": "*"
    },
    "require-dev": {
        "codeception/c3": "^2.9",
        "codeception/codeception": "^5.3",
        "codeception/module-asserts": "^3.3",
        "codeception/module-phpbrowser": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Domain\\": "src/domain/",
            "Application\\": "src/application/",
            "Infrastructure\\": "src/infrastructure/",
            "Interfaces\\": "src/interfaces/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-php tests/_output/coverage.cov --coverage-html tests/_output/coverage",
        "test-c3": "codecept run",
        "test-c3-coverage": "codecept run --coverage --coverage-html",
        "phpstan": "phpstan analyse --ansi -c phpstan.neon --memory-limit=512M",
        "phpstan-baseline": "phpstan analyse --generate-baseline --ansi",
        "cs-fix": "php-cs-fixer fix --ansi --verbose",
        "cs-fix-dry": "php-cs-fixer fix --ansi --verbose --dry-run",
        "rector": "rector process --ansi",
        "rector-dry": "rector process --ansi --dry-run",
        "analyze": [
            "@cs-fix-dry",
            "@phpstan",
            "@rector-dry",
            "@test"
        ],
        "analyze-fix": [
            "@cs-fix",
            "@rector",
            "@test"
        ],
        "serve": "php -S localhost:8000 -t public",
        "migrate": "php bin/cms migrate",
        "seed": "php bin/cms seed"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "codeception/c3": true
        }
    }
}
